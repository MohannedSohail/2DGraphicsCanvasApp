<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <com.example.a2dgraphicsapp.DrawingSurfaceView
        android:id="@+id/drawing_surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" />


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="@dimen/cardview_default_elevation"
        >

        <Button
            android:id="@+id/clear_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_color_shape"
            android:drawableLeft="@drawable/baseline_clear_24"
            android:elevation="10dp"
            android:text="Clear"
            android:textColor="@color/black"
            app:backgroundTint="@null" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="@dimen/cardview_default_elevation"
        >

        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_color_shape"
            android:drawableLeft="@drawable/baseline_save_alt_24"
            android:text="Save"
            android:textColor="@color/black"
            app:backgroundTint="@null"

            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/width_button_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="@dimen/cardview_default_elevation"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="20dp"
        >

        <Button
            android:id="@+id/width_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_color_shape"
            android:drawableLeft="@drawable/baseline_text_fields_24"
            android:text="Change Width"
            android:textColor="@color/black"
            app:backgroundTint="@null" />
    </androidx.cardview.widget.CardView>

    <SeekBar
        android:id="@+id/line_width_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/width_button_card"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:max="40"
        android:visibility="gone"
        android:saveEnabled="true"
        android:progressBackgroundTint="@color/black"


        />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="30dp"
        app:cardElevation="@dimen/cardview_default_elevation"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        >


        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="30dp"

            />

    </androidx.cardview.widget.CardView>


</RelativeLayout>
